{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "services/*": ["src/services/*"],
      "config/*": ["src/config/*"],
      "utils": ["src/utils"],
      "utils/*": ["src/utils/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "esnext"
  }
}
